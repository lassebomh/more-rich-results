{
    "name": "More Rich Results",
    "description": "",
    "version": "0.1",
    "permissions": [
        "tabs",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": "public/icon.png",
        "default_popup": "html/popup.html",
        "default_title": "Settings"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "public/moment.min.js",
                "public/highlight.min.js",
                "public/highlightjs-copy.min.js",
                "lib.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://*/*"
            ],
            "include_globs": [
                "*://*.google.*/search*"
            ],
            "js": [
                "triggers/google.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "manifest_version": 2
}