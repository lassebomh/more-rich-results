{
    "name": "Search Result Previews",
    "description": "Add more types of search previews in search engines.",
    "version": "0.1",
    "permissions": [
        "tabs",
        "<all_urls>"
    ],
    "icons": {
        "128": "public/icon_256.png"
    },
    "browser_action": {
        "default_icon": "public/icon_256.png",
        "default_popup": "public/popup.html",
        "default_title": "Settings"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "public/js/moment.min.js",
                "public/js/highlight.min.js",
                "public/js/highlightjs-copy.min.js",
                "lib/colorlib.js",
                "lib/helper.js",
                "lib/integrations.js",
                "public/js/generate-theme.js"
            ],
            "run_at": "document_end",
            "all_frames":true
        },
        {
            "matches": [ "*://*/*" ],
            "include_globs": [ "*://*.google.*/search*" ],
            "js": [ "triggers/google.js" ],
            "run_at": "document_end",
            "all_frames":true
        },
        {
            "matches": [ "*://*/*" ],
            "include_globs": [ "*://*.google.*/search*gbv=1*" ],
            "css": [ "public/css/themes/google-noscript-theme.css" ],
            "run_at": "document_start",
            "all_frames":true
        },
        {
            "matches": [ "*://*/*" ],
            "include_globs": [ "*://html.duckduckgo.*/html?q=*", "*://html.duckduckgo.*/html/?q=*", "*://html.duckduckgo.*/html/" ],
            "js": [ "triggers/ddg-noscript.js" ],
            "run_at": "document_end",
            "all_frames":true
        },
        {
            "matches": [ "*://*/*" ],
            "include_globs": [ "*://duckduckgo.*/?q=*" ],
            "js": [ "triggers/ddg.js" ],
            "run_at": "document_end",
            "all_frames":true
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "web_accessible_resources": [
        "public/*"
    ],      
    "manifest_version": 2
}