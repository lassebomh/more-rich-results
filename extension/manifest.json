{
    "name": "More Rich Results",
    "description": "Add more types of rich results in search engines.",
    "version": "0.1",
    "permissions": [
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],      
    "icons": {
        "128": "public/icon_106.png"
    },
    "action": {
        "default_icon": {
          "106": "public/icon_106.png"
        },
        "default_title": "Settings",
        "default_popup": "public/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "public/js/moment.min.js",
                "public/js/highlight.min.js",
                "public/js/highlightjs-copy.min.js",
                "lib/colorlib.js",
                "lib/helper.js",
                "lib/integrations.js",
                "public/js/generate-theme.js"
            ],
            "run_at": "document_end",
            "all_frames":true
        },

        {
            "matches": [ "*://*/*" ],
            "include_globs": [ "*://*.google.*/search*" ],
            "js": [ "triggers/google.js" ],
            "run_at": "document_end",
            "all_frames":true
        },
        
        {
            "matches": [ "*://*/*" ],
            "include_globs": [ "*://*.google.*/search*gbv=1*" ],
            "js": [ "triggers/google-noscript.js" ],
            "run_at": "document_end",
            "all_frames":true
        },
        {
            "matches": [ "*://*/*" ],
            "include_globs": [ "*://*.google.*/search*gbv=1*" ],
            "css": [ "public/css/themes/google-noscript-theme.css" ],
            "run_at": "document_start",
            "all_frames":true
        },

        {
            "matches": [ "*://*/*" ],
            "include_globs": [ "*://html.duckduckgo.*/html*" ],
            "js": [ "triggers/ddg-noscript.js" ],
            "run_at": "document_end",
            "all_frames":true
        },
        {
            "matches": [ "*://*/*" ],
            "include_globs": [ "*://duckduckgo.*/?q=*" ],
            "js": [ "triggers/ddg.js" ],
            "run_at": "document_end",
            "all_frames":true
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [{
        "resources": ["public/*"],
        "matches": ["<all_urls>"]
    }],
    "manifest_version": 3
}